<com.ap.androidltest.widget.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/all_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:scrollbarStyle="outsideOverlay"
    tools:context="com.ap.androidltest.activity.DetailsActivity$PlaceholderFragment"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/all_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/all_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_image_height"
                android:contentDescription="@string/no_content_description"
                android:scaleType="centerCrop"
                android:transitionName="@string/transition_image" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/all_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="2dp">

            <TextView
                android:id="@+id/all_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_hotizontal_content_padding"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="20dp"
                android:text="@string/lorem_ip_sum"
                android:textColor="@android:color/black" />

        </FrameLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/all_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_bar_height"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize" />

        <ImageView
            android:id="@+id/all_add_button"
            android:layout_width="@dimen/all_add_button_size"
            android:layout_height="@dimen/all_add_button_size"
            android:background="@drawable/add_fab_background"
            android:contentDescription="@string/no_content_description"
            android:scaleType="center"
            android:src="@drawable/add_button_icon_unchecked" />

    </FrameLayout>

</com.ap.androidltest.widget.ObservableScrollView>
